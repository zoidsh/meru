{
	"name": "meru",
	"productName": "Meru",
	"version": "3.0.0-beta.4",
	"private": true,
	"description": "Nifty Gmail desktop app",
	"author": "Tim Cheung <tim@cheung.io>",
	"repository": "timche/meru",
	"main": "build-js/app.js",
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"dev": "bun run scripts/build.ts --dev",
		"lint": "biome check .",
		"lint:write": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
		"types": "tsc",
		"build:js": "bun run scripts/build.ts",
		"build:mac": "electron-builder --mac",
		"build:linux": "electron-builder --linux",
		"build:win": "electron-builder --win"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/typed-ipc": "^1.0.2",
		"@electron-toolkit/utils": "^4.0.0",
		"@hookform/resolvers": "^4.1.3",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-scroll-area": "^1.2.3",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@tanstack/react-query": "^5.69.0",
		"@types/bun": "^1.2.5",
		"@types/js-cookie": "^3.0.6",
		"@types/react-dom": "^19.0.4",
		"@types/trusted-types": "^2.0.7",
		"bun-plugin-tailwind": "^0.0.14",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"electron": "^35.0.2",
		"electron-builder": "^25.1.8",
		"electron-context-menu": "^4.0.5",
		"electron-dl": "^4.0.0",
		"electron-log": "^5.3.2",
		"electron-store": "^10.0.1",
		"electron-updater": "^6.6.2",
		"element-ready": "^7.0.0",
		"js-cookie": "^3.0.5",
		"lefthook": "^1.11.3",
		"lucide-react": "^0.475.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"select-dom": "^9.3.0",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.0.14",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.2",
		"zod": "^3.24.2"
	},
	"build": {
		"files": ["build-js", "static"],
		"appId": "dev.timche.meru",
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "build/icon.icns",
			"target": {
				"target": "default",
				"arch": ["x64", "arm64"]
			}
		},
		"linux": {
			"icon": "build/icons/",
			"target": ["AppImage", "deb"],
			"synopsis": "Nifty Gmail desktop app",
			"description": "Meru is an unofficial and security focused Gmail app with many useful features.",
			"category": "Network;Office"
		},
		"win": {
			"verifyUpdateCodeSignature": false,
			"icon": "build/icon.png",
			"target": ["nsis", "portable"]
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true
		},
		"publish": {
			"provider": "github",
			"releaseType": "release"
		}
	},
	"patchedDependencies": {
		"conf@13.1.0": "patches/conf@13.1.0.patch"
	}
}
